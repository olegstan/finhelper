        "emitDeclarationOnly": true,
        "declaration": true, // Enable this to generate declaration files
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es6",
        "typeRoots": ["node_modules/@types", "@types"],
        "strict": true
    },
    "include": ["./src/**/*", "./@types/**/*"]
}