{
    "compilerOptions": {
        "emitDeclarationOnly": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "strict": true,
        "allowJs": true // Разрешить обработку .js файлов
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}